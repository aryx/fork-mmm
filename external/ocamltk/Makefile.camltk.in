## Where you installed ObjectiveCaml
LIBDIR=@OCAMLLIBDIR@

## Where installed CamlTk41 libraries and binaries
CAMLTKDIR=@INSTALLDIR@

TKCOMPFLAGS=-I $(CAMLTKDIR)
# WITH_TK=-ccopt -L$(CAMLTKDIR) -cclib -lcamltk41 \
# 	  -ccopt "@LDFLAGS@" -cclib "@LIBS@" \
# 	  -ccopt "@X_LIBS@" -cclib "@THE_X_LIBS@" \
# 	  $(TKCOMPFLAGS) tk41.cma
WITH_TK=$(TKCOMPFLAGS) tk41.cma
WITH_FRX=libfrx.cma
WITH_JPF=libjpf.cma
WITH_JTK=jtk.cmo
WITH_TK80=tk80.cmo
WITH_TKANIM=tkanim.cmo tkaniminit.cmo $(CAMLTKDIR)/cltkaniminit.o -cclib -ltkanim

## The same for ocamlopt
WITH_TK_OPT=-ccopt -L$(CAMLTKDIR) -cclib -lcamltk41 \
	-ccopt "@LDFLAGS@" -cclib "@LIBS@" \
	-ccopt "@X_LIBS@" -cclib "@THE_X_LIBS@" \
	$(TKCOMPFLAGS) tk41.cmxa
WITH_FRX_OPT=libfrx.cmxa
WITH_JPF_OPT=libjpf.cmxa
WITH_JTK_OPT=$(CAMLTKDIR)/jtk.cmx
WITH_TK80_OPT=$(CAMLTKDIR)/tk80.cmx
WITH_TKANIM_OPT=tkanim.cmx tkaniminit.cmx $(CAMLTKDIR)/cltkaniminit.o -cclib -ltkanim

### Usage:
### in your Makefiles, add the following
##  include .../Makefile.camltk
### Then add $(TKCOMPFLAGS) to COMPFLAGS
## COMPFLAGS=$(TKCOMPFLAGS)
### and the rule to produce a standlone CamlTk application is
## appl : $(OBJS)
##	ocamlc -custom -o $@ $(WITH_TK) $(OBJS)
